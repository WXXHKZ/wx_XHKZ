.index-searchbox {
  background-color: #eff1f4;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin: 0 20rpx 20rpx;
  color: #999;
}

.icon-sousuo{
  font-size: 32rpx;
  margin-right: 10rpx;
}

.index-swiper{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  overflow: hidden;
}

.swiperImg{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  transform: scale(0.8);
  transition: 0.4s
}

.active.swiperImg{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  transform: scale(1);
  transition: 0.4s;
}