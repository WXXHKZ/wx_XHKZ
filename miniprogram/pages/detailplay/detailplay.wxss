/* pages/detailplay/detailplay.wxss */

page {
  width: 100%;
}

/******************播放**************/

.play {
  position: relative;
  padding-top: 40rpx;
  background: #fafafa;
}

.icon-right {
  position: absolute;
  top: 70rpx;
  left: 20rpx;
  font-weight: 700;
  font-size: 36rpx;
}

.play-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.play-title {
  font-size: 36rpx;
  font-weight: 700;
  width: 75%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 40rpx;
}

.play-img-box {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
  margin-bottom: 100rpx;
}

.play-img {
  width: 400rpx;
  height: 400rpx;
  border-radius: 20rpx;
}

.body-view {
  background: #fff;
}

.time-box {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 24rpx;
  padding:0 40rpx;
}

.btn-control {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  width: 100%;
}

.icon-yinpin-shangxiayiqu, .icon-yinpin-shangxiayiqu1 {
  font-size: 50rpx;
  margin: 0 40rpx;
  color: #ddd;
}

.icon-bofang3, .icon-zanting {
  font-size: 80rpx;
  margin: 0 40rpx;
  color: orangered;
}

.body-view {
  width: 100%;
}

.btn-other {
  background: #fff;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.btn-other>view {
  width: 120rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

.news {
  margin: 10rpx 0;
  padding: 20rpx 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.news-img-box {
  width: 88rpx;
  height: 88rpx;
  margin: 0 20rpx;
}

.news-img {
  width: 88rpx;
  height: 88rpx;
}

.news-contents {
  flex: 1;
}

.news-h4 {
  font-size: 28rpx;
}

.news-p {
  font-size: 24rpx;
  color: #666;
}

.btn-collection {
  margin: 0 20rpx 0 40rpx;
  display: flex;
  justify-content: center;
  background: rgb(247, 225, 224);
  color: red;
  border-radius: 28rpx;
  height: 56rpx;
  padding: 0 40rpx;
  line-height: 56rpx;
  font-size: 24rpx;
}

.icon-jia1 {
  font-size: 24rpx;
}

.introduce {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 10rpx;
}

.anchor-name {
  font-weight: 700;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.introduce-msg {
  font-size: 28rpx;
  color: #666;
}

/*****************评论****************/

.comment {
}

.h3 {
  height: 60rpx;
  margin: 20rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
}

.h3 .totalComment {
  color: #ddd;
  font-weight: normal;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.msg-list {
  display: flex;
}

.msg-list .img-box {
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
  margin: 0 20rpx;
}

.msg-list .img-box>image {
  width: 76rpx;
  height: 76rpx;
  border-radius: 38rpx;
}

.comment-msg {
  display: block;
  /* width: calc(100%-40rpx); */
  flex: 1;
  padding-right: 40rpx;
}

.commentator-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.commentator-name {
  font-size: 32rpx;
}

.commentator-time {
  font-size: 24rpx;
}

.commentator-box-right {
  display: flex;
  color: #999;
  font-weight: normal;
  align-items: center;
}

.like {
  font-size: 24rpx;
}

.comment-content {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
