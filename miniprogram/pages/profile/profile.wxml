<!--pages/profile/profile.wxml-->
<view id="login" wx:if="{{isHide}}">
  <view class="wChat">
  <button open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">
    微信登陆
  </button>
  </view>
  <view class="phone">
    <button bindtap="login">
      手机号登陆
    </button>
  </view>
</view>
<view id="{{skinStyle}}_wrap" wx:else>
  <!-- 顶部用户 -->
  <view class="top">
    <view class="user">
      <view class="left">
        <view id="mine" bindtap="changeLog">
          <cover-image id="userImg" src="{{userImg}}"></cover-image>
          <icon class="iconfont weixin"></icon>
        </view>
        <text>{{userName}}</text>
        <icon class="iconfont vip"></icon>  
      </view>
      <view class="serve">
        <icon class="iconfont kefu"></icon>
        <text>客服服务</text>
      </view>
    </view>
  <!-- 签到 -->
    <view class="sign">
      <view class="left">
        <icon class="iconfont signin"></icon>
        <text>签到</text>
      </view>
      <view class="right">
        >
      </view>
    </view>
  </view>


  <view class="main">
  <!-- 定时关闭 -->
    <view class="close">
      <view class="left">
        <icon class="iconfont time"></icon>
        <text>定时关闭</text>
      </view>
      <view class="right">
        >
      </view>
    </view>
    <!-- 夜间模式 -->
    <view class="night">
      <view class="left">
        <icon class="iconfont lighting"></icon>
        <text>夜间模式</text>
      </view>
      <switch bindchange="switchChange" checked="{{skinSwitch}}" style="zoom:1;">
        
      </switch>
    </view>
    <!-- 意见反馈 -->
    <view class="feedback">
      <view class="left">
        <icon class="iconfont Opinion"></icon>
        <text>意见反馈</text>
      </view>
      <view class="right">
        >
      </view>
    </view>
    <!-- 切换账号 -->
    <view class="changeNum">
      <view class="left">
        <icon class="iconfont change"></icon>
        <text>切换账号</text>
      </view>
      <view class="right">
        >
      </view>
    </view>
  </view>
</view>