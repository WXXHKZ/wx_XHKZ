page {
  width: 100%;
  position: relative;
  height: max-content;
}

.bg-box {
  z-index: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  -webkit-filter: blur(15rpx);
  -moz-filter: blur(15rpx);
  -o-filter: blur(15rpx);
  -ms-filter: blur(15rpx);
  filter: blur(15rpx);
}

.bg-box>image {
  width: 100%;
  height: 300rpx;
}

.main-msg {
  position: relative;
  z-index: 1;
  padding: 20rpx;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
}

.img-box {
  display: flex;
  position: relative;
  border-radius: 20rpx；
}

.img-box .img1 {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx；
}

.img-box .img2 {
  width: 50rpx;
  height: 200rpx;
}

.img-box .play-num {
  width: 200rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  color: #fff;
  background: rgba(0, 0, 0, 0.1);
  display: flex;
  border-radius: 0 0 20rpx 20rpx；
}

.mgs-box {
  width: 100%;
}

.h3 {
  font-size: 36rpx;
  color: #fff;
  font-weight: normal;
}

.anchor {
  display: flex;
  height: 80rpx;
  line-height:80rpx;
}
.anchor>view>image{
  width: 40rpx;
  height: 40rpx;
}

.order-box {
  width: 100%;
  display: flex;
  align-items: start;
  justify-content: space-between;
  font-size: 24rpx;
  color: #fff;
}

.order-box>view {
  display: block;
  padding: 0 0.1rem;
  height: 56rpx;
  line-height:  56rpx;
  background: #fff;
  border-radius: 28rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000;
}
