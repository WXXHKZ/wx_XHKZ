page {
  width: 100%;
  position: relative;
  height: max-content;
}

.bg-box {
  z-index: 0;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  -webkit-filter: blur(40rpx);
  -moz-filter: blur(40rpx);
  -o-filter: blur(40rpx);
  -ms-filter: blur(40rpx);
  filter: blur(40rpx);
}

.bg-box>image {
  width: 100%;
  height: 460rpx;
}

.main-msg {
  position: relative;
  height: 320rpx;
  z-index: 1;
  padding: 160rpx 20rpx 20rpx;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
}

.icon-right{
  position: absolute;
  top: 70rpx;
  font-weight: 700;
  font-size: 36rpx;
  color: #fff;
}

.main-msg .img-box {
  position: relative;
  display: flex;
  height: 200rpx;
  border-radius: 10rpx;
}

.img-box .img1 {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.img-box .img2 {
  width: 50rpx;
  height: 200rpx;
}

.img-box .play-num {
  position: absolute;
  width: 200rpx;
  height: 30rpx;
  left: 0;
  bottom: 0;
  color: #fff;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  border-radius: 0 0 20rpx 10rpx;
  font-size: 24rpx;
  line-height: 30rpx;
}

.img-box .play-num>view {
  margin-left: 10rpx;
}

.mgs-box {
  width: 100%;
}

.h3 {
  font-size: 34rpx;
  color: #fff;
  font-weight: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.anchor {
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  align-items: center;
  padding: 20rpx 0;
}

.anchor>view {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  display: flex;
}

.icon-right1 {
  font-size: 20rpx;
  margin-left: 10rpx;
}

.anchor>view>image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.order-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: start;
  justify-content: space-between;
  font-size: 24rpx;
  color: #fff;
}

.order-box .btn-box {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.order-box .btn-box>view {
  display: flex;
  justify-content: center;
  height: 56rpx;
  line-height: 56rpx;
  width: 40%;
  border: 1px solid #fff;
  border-radius: 10rpx;
  text-align: center;
}

.order-box .btn-box .btn-collection {
  font-size: 24rpx;
  background: red;
  border: 1px solid red;
}
.icon-jia{
  font-size:20rpx;
}
