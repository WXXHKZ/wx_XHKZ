.palylist-box {
  position: absolute;
  top: 360rpx;
  background: #fff;
  z-index: 99;
  border-radius: 20rpx 20rpx 0 0;
  width: 100%;
}

.playlist-title {
  padding:40rpx;
  display: flex;
  justify-content: space-between;
}

.playlist-right {
  display: flex;
}

.playlist-palyall {
  display: flex;
  align-items: center;
}

.playlist-sort {
  display: flex;
  margin-right: 40rpx;
  align-items: center;
  color: #666;
}

.playlist-change {
  display: flex;
  align-items: center;
  color: #666;
}

.scroll-box{
  width:100%;
  height:1000rpx;
}

.list-li {
  padding-top: 20rpx;
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
  justify-content: space-between;
}

.li-index{
  font-size: 36rpx;
  color: #666;
  margin: 40rpx;
}
.li-time{
  width: 66rpx; 
  font-size: 20rpx;
  color: #666;
  margin: 0 20rpx 0 60rpx;
}
.li-content{
  flex: 1;
}
.li-p{
  display: flex;
  margin:30rpx 0 20rpx;
  font-size: 22rpx;
}
.li-playCount{
  display: flex;
  align-items: center;
  margin-right:40rpx;
}
.li-duration{
  display: flex;
  align-items: center;
}
.icon-shijian{
  font-size: 22rpx;
  margin-right: 10rpx;
}
.icon-pause{
  font-size: 22rpx;
  margin-right: 10rpx;
}
