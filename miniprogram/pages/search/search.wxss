/* pages/search/search.wxss */

page{
  background: #fff;
}
.search-bar{
  display: flex;
  height: 58rpx;
  padding:10rpx 20rpx;
  border-radius: 20rpx;
  align-items: center;
}
.input-box{
  background: #f5f5f5;
  color: #999;
  flex:1;
  display: flex;
  height: 58rpx;
  line-height: 58rpx;
  margin-right: 20rpx;
  align-items: center;
  font-size: 24rpx;
  border-radius: 20rpx;
}
.input-box>input{
  flex:1;
}
.iconsize{
  color: #ccc;
  font-size: 24rpx;
  margin: 0 20rpx;
}

.btn-quxiao{
  font-size: 24rpx;
  color: #666;
}

.hidtory,.hot{
  padding:0 20rpx;
}

.h3{
  font-weight: 700;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}
.h3>text{
  font-size: 28rpx;
  flex:1;
}
.delate{
   font-size:28rpx;
   margin: 0 20rpx;
   color: #ccc;
}

.history-list{
  display: flex;
  flex-wrap: wrap;
  
}
.history-list>view{
  font-size: 28rpx;
  padding:10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.list-item{
  height: 68rpx;
  line-height: 68rpx;
  display: flex;
  justify-content:space-around;
}

.list-content{
  flex: 1;
  font-size: 28rpx;
}

.index{
   font-size: 32rpx;
   margin: 0 20rpx;
}
.first{
  font-size: 36rpx;
  font-weight: 700;
  color: red;
}
.secend{
  font-size: 36rpx;
  font-weight: 700;
  color: orangered;
}
.thrid{
  font-size: 36rpx;
  font-weight: 700;
  color: brown;
}

.shangsheng{
  color: red
}
.xiajiang{
   color: green
}
.icon-size{
  font-size: 24rpx;
  margin: 0 20rpx;
}
