/* pages/category/category.wxss */
.category{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.index-searchbox {
  background-color: #eff1f4;
  font-size: 24rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
  color: #999;
  height: 58rpx;
  line-height: 58rpx;
}
.icon-sousuo{
  font-size: 28rpx;
  margin-right: 10rpx;
}

.ca-content{
  position: relative;
  flex:1;
  display: flex;
}
.menu{
  width: 180rpx;
  background: #eff1f4;
  overflow-y:scroll; 
  height: 100%;
}
.menu-fill{
    position: absolute;
    top: 0;
    left: 0;
    padding-top: 40rpx;
    background: #eff1f4;
    width: 180rpx;
}
.menu-out{
  padding-top: 40rpx;
}
.menu-item{
  height: 100rpx;
  color: #ababab;
  font-size: 30rpx;
  padding-left: 30rpx;
  position: relative;
}
.bd{
  position: absolute;
  left: 0;
  width: 20rpx;
  padding: 1rpx 0 0 0 ;
  background: #ababab;
}
.bd1{
  width: 25rpx;
  top: 20rpx;
}
.bd2{
  width: 10rpx;
  top: 45rpx;
}
.bd3{
  width: 17rpx;
  top: 60rpx;
}
.bd4{
  width: 10rpx;
  top: 85rpx;
}
.bd5{
  width: 17rpx;
  top: 100rpx;
}

.menu-active{
  color: #f86442;
  font-weight: 600;
  font-size: 32rpx;
}
.menu-active .bd1{
  background: #f86442
}
.cate-show{
  flex: 1;
  background: #eff1f4;
  height: 100%;
}
.cate-fill{
  padding-bottom: 732rpx;
}
.cate-title{
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #313234;
  padding: 10rpx 0 ;
  margin-top: 20rpx;
}
.cate-content{
  display: flex;
  background: #fff;
  height: 160rpx;
  flex-wrap: wrap;
  border-radius: 20rpx;
}
.cate-text{
  flex:0 0 33.33%;
  font-size: 30rpx;
  text-align: center;
  line-height: 80rpx;
}

