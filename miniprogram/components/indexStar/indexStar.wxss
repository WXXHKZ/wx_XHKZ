.star-top {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.star-title {
  font-size: 32rpx;
  color: #000;
}

.star-more {
  font-size: 26rpx;
  color: #666;
}

.starList {
  display: flex;
  padding: 20rpx 20rpx 0;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.starItem {
  width: 32%;
  position: relative;
}

.starImg {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
}

.starItem-countbox {
  position: absolute;
  box-sizing: border-box;
  padding-left: 24rpx;
  width: 100%;
  background: linear-gradient(to bottom, transparent 0%,#000 100%);
  bottom: 0;
  height: 40rpx;
}

.starItem-playcount {
  display: block;
  box-sizing: border-box;
  padding-left: 26rpx;
  width: 100%;
  font-size: 24rpx;
  color: #fff;
  text-shadow: 1px 0 0 rgba(0, 0, 0, 0.15);
  background: url(data:image/png;base64,) no-repeat left center;
  background-size: 20rpx;
  background-position-y: 4rpx;
}
