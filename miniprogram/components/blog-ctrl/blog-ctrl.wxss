.ctrl {
  display: flex;
  align-items: center;
  background: #fff;
  height: 100%;
  font-weight: 400 !important;
}

.ctrl-item {
  flex: 1;
  text-align: center;
  color: rgba(40, 47, 60, 0.8);
  font-size: 26rpx !important;
  height: 60rpx !important;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.ctrl-item .icon {
  margin-right: 12rpx !important;
  font-size: 32rpx !important;
}

.ctrl-item text {
  font-size: 32rpx !important;
}

.comment-content {
  width: 560rpx !important;
  text-align: left !important;
  padding: 20rpx !important;
  font-size: 32rpx !important;
}

.send {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 150rpx !important;
  min-height: 60rpx !important;
}

.share-btn {
  background-color: #fff;
  color: rgba(40, 47, 60, 0.8);
  padding: 0;
  height: 100% !important;
  border: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-weight: 400 !important;
}

.share-btn::after {
  display: none;
}

.share-hover::after {
  border: 0;
}
