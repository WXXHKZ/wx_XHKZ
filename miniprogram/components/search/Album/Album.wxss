@import '../../../iconFont/iconFont-chenxuejing.wxss';

.scroll-box{
  height: 82%;
}

.list-box {
  padding: 0 20rpx;
}

.li-item {
  padding: 20rpx 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
}

.image-box {
  margin-right: 20rpx;
}

.image-box>image {
  width: 100rpx;
  height: 100rpx;
  padding: 0;
  margin: 0;
}

.li-content {
  flex: 1;
}

.li-content .title {
  width: 500rpx;
  height: 44rpx;
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.li-content .intro {
  width: 500rpx;
  font-size: 24rpx;
  color: #999;
  height: 44rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.li-content .other-box {
  display: flex;
  font-size: 22rpx;
  color: #999;
}

.li-content .other-box .other-msg {
  display: flex;
  margin-right: 20rpx;
}

.icon-1 {
  font-size: 24rpx;
  margin-right: 20rpx;
}

.play-btn {
  color: orangered;
}
