.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.bar {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
}

.search {
  background: #d43c33;
  color: #fff;
  margin-left: 20rpx !important;
  font-size: 24rpx !important;
  width: 150rpx !important;
  min-height: 68rpx !important;
  font-weight: 400 !important;
}

.in-bar {
  color: #999;
}

.find {
  position: absolute;
  top: 50%;
  transform: translate(16rpx, -50%);
  color: #9f9f9f;
}
